# RenderCV SaaS - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# Application Settings
# =============================================================================

# Application environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (disable in production!)
DEBUG=true

# API server port
API_PORT=8000

# =============================================================================
# Security
# =============================================================================

# Secret key for JWT tokens - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32

# JWT token expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Database
# =============================================================================

# PostgreSQL password
DB_PASSWORD=rendercv

# Full database URL (uses PostgreSQL by default)
# For SQLite (development): sqlite+aiosqlite:///./rendercv.db
# For PostgreSQL: postgresql+asyncpg://rendercv:${DB_PASSWORD}@db:5432/rendercv
DATABASE_URL=postgresql+asyncpg://rendercv:rendercv@db:5432/rendercv

# =============================================================================
# Redis
# =============================================================================

# Redis URL for job queue and caching
REDIS_URL=redis://redis:6379/0

# =============================================================================
# Storage
# =============================================================================

# Storage backend: local or s3
STORAGE_BACKEND=local

# Local storage path
STORAGE_PATH=./storage

# S3 Configuration (only needed if STORAGE_BACKEND=s3)
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT_URL=  # For MinIO or other S3-compatible storage

# =============================================================================
# Rate Limiting
# =============================================================================

# API requests per minute
RATE_LIMIT_PER_MINUTE=60

# Render requests per hour
RATE_LIMIT_RENDERS_PER_HOUR=20

# =============================================================================
# CORS
# =============================================================================

# Allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# Email (SMTP)
# =============================================================================

# SMTP configuration for password reset emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@rendercv.com
SMTP_TLS=true

# =============================================================================
# Render Settings
# =============================================================================

# Maximum render timeout in seconds
MAX_RENDER_TIMEOUT_SECONDS=120

# Maximum CV YAML size in KB
MAX_CV_SIZE_KB=500

# Auto-cleanup renders older than N days
CLEANUP_OLD_RENDERS_AFTER_DAYS=30

# =============================================================================
# Production (Nginx/SSL)
# =============================================================================

# HTTP port (usually 80)
HTTP_PORT=80

# HTTPS port (usually 443)
HTTPS_PORT=443

# Your domain name (for SSL certificate)
DOMAIN=your-domain.com
